{
  "name": "jbs-server",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "tsc",
    "prettier": "prettier --write 'src/**/*.ts' 'src/**/*.json'",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "dev": "node --inspect -r ts-node/register ./src/server.ts",
    "dev:watch": "npm run prettier && npm run lint:fix && nodemon",
    "start": "nodemon --use_strict ./dist/server.js",
    "prod": "npm run build && npm run start",
    "start:pm2": "npx pm2 start pm2.yaml"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.1",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.6.11",
    "nodemon": "^1.19.1",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^12.7.3",
    "@types/swagger-ui-express": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.18.2",
    "swagger-ui-express": "^4.1.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2",
    "yamljs": "^0.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run dev",
    "ext": "ts"
  }
}
